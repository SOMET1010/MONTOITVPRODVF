{
  "$schema": "https://tr.designtokens.org/format/",
  "name": "Montoit Design System",
  "version": "1.0.0",
  "description": "Design tokens unifié pour la plateforme immobilière Montoit",
  
  "color": {
    "primary": {
      "50": { "value": "#FFF5F0", "type": "color", "description": "Orange très clair - backgrounds subtils" },
      "100": { "value": "#FFE5D6", "type": "color", "description": "Orange clair - hover states" },
      "500": { "value": "#FF6C2F", "type": "color", "description": "Orange principal - COULEUR DE MARQUE" },
      "700": { "value": "#E05519", "type": "color", "description": "Orange foncé - hover boutons primaires" },
      "900": { "value": "#B84512", "type": "color", "description": "Orange très foncé - active states" }
    },
    "neutral": {
      "50": { "value": "#F8F8F8", "type": "color", "description": "Gris très clair - backgrounds" },
      "100": { "value": "#E0E0E0", "type": "color", "description": "Gris clair - bordures, séparateurs" },
      "300": { "value": "#9E9E9E", "type": "color", "description": "Gris moyen - placeholders" },
      "500": { "value": "#6A6A6A", "type": "color", "description": "Gris - texte secondaire" },
      "700": { "value": "#333333", "type": "color", "description": "Gris foncé - texte principal" },
      "900": { "value": "#1A1A1A", "type": "color", "description": "Noir - headers, footer" }
    },
    "background": {
      "page": { "value": "#FFFFFF", "type": "color", "description": "Fond de page principal" },
      "surface": { "value": "#FDFBF7", "type": "color", "description": "Fond crème léger - cards, panels" }
    },
    "semantic": {
      "success": { "value": "#2ECC71", "type": "color", "description": "Vert - messages succès, validations" },
      "error": { "value": "#E74C3C", "type": "color", "description": "Rouge - erreurs, alertes" },
      "warning": { "value": "#F39C12", "type": "color", "description": "Jaune - avertissements" },
      "info": { "value": "#3498DB", "type": "color", "description": "Bleu - informations" }
    }
  },

  "typography": {
    "fontFamily": {
      "primary": {
        "value": "'Poppins', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
        "type": "fontFamily",
        "description": "Police principale - tous textes"
      }
    },
    "fontSize": {
      "display": { "value": "60px", "type": "dimension", "description": "3.75rem - Titres hero H1" },
      "h1": { "value": "48px", "type": "dimension", "description": "3rem - Titres principaux" },
      "h2": { "value": "36px", "type": "dimension", "description": "2.25rem - Titres sections" },
      "h3": { "value": "28px", "type": "dimension", "description": "1.75rem - Sous-titres" },
      "h4": { "value": "24px", "type": "dimension", "description": "1.5rem - Petits titres" },
      "h5": { "value": "20px", "type": "dimension", "description": "1.25rem - Labels sections" },
      "body": { "value": "16px", "type": "dimension", "description": "1rem - Texte corps (BASE)" },
      "small": { "value": "14px", "type": "dimension", "description": "0.875rem - Texte secondaire" },
      "xs": { "value": "12px", "type": "dimension", "description": "0.75rem - Annotations" }
    },
    "fontWeight": {
      "regular": { "value": "400", "type": "number", "description": "Texte corps standard" },
      "semibold": { "value": "600", "type": "number", "description": "Sous-titres, labels" },
      "bold": { "value": "700", "type": "number", "description": "Titres, boutons" }
    },
    "lineHeight": {
      "heading": { "value": "1.25", "type": "number", "description": "Pour titres (1.2-1.3)" },
      "body": { "value": "1.5", "type": "number", "description": "Pour texte corps" },
      "relaxed": { "value": "1.7", "type": "number", "description": "Pour longues descriptions" }
    },
    "letterSpacing": {
      "tight": { "value": "-0.02em", "type": "dimension", "description": "Grands titres" },
      "normal": { "value": "0", "type": "dimension", "description": "Texte standard" },
      "wide": { "value": "0.05em", "type": "dimension", "description": "ALL CAPS, boutons" }
    }
  },

  "spacing": {
    "1": { "value": "4px", "type": "dimension", "description": "0.25rem - Espacement minimal" },
    "2": { "value": "8px", "type": "dimension", "description": "0.5rem - Base minimale recommandée" },
    "3": { "value": "12px", "type": "dimension", "description": "0.75rem" },
    "4": { "value": "16px", "type": "dimension", "description": "1rem - Espacement standard" },
    "6": { "value": "24px", "type": "dimension", "description": "1.5rem" },
    "8": { "value": "32px", "type": "dimension", "description": "2rem - Cards, composants" },
    "12": { "value": "48px", "type": "dimension", "description": "3rem - Entre groupes" },
    "16": { "value": "64px", "type": "dimension", "description": "4rem - Entre sections" },
    "24": { "value": "96px", "type": "dimension", "description": "6rem - Sections majeures" },
    "32": { "value": "128px", "type": "dimension", "description": "8rem - Hero, grands espacements" }
  },

  "borderRadius": {
    "none": { "value": "0px", "type": "dimension", "description": "Pas d'arrondi" },
    "sm": { "value": "4px", "type": "dimension", "description": "Petit arrondi" },
    "base": { "value": "8px", "type": "dimension", "description": "Arrondi standard - boutons, inputs" },
    "md": { "value": "12px", "type": "dimension", "description": "Arrondi moyen - cards" },
    "lg": { "value": "16px", "type": "dimension", "description": "Grand arrondi" },
    "xl": { "value": "24px", "type": "dimension", "description": "Très grand arrondi" },
    "full": { "value": "9999px", "type": "dimension", "description": "Cercle/pilule complet" }
  },

  "boxShadow": {
    "sm": {
      "value": "0 2px 4px rgba(0, 0, 0, 0.06)",
      "type": "shadow",
      "description": "Ombre subtile - hover states légers"
    },
    "base": {
      "value": "0 2px 8px rgba(0, 0, 0, 0.08)",
      "type": "shadow",
      "description": "Ombre standard - cards au repos"
    },
    "md": {
      "value": "0 4px 12px rgba(0, 0, 0, 0.10)",
      "type": "shadow",
      "description": "Ombre moyenne - cards hover"
    },
    "lg": {
      "value": "0 8px 16px rgba(0, 0, 0, 0.12)",
      "type": "shadow",
      "description": "Ombre forte - modales, dropdowns"
    },
    "xl": {
      "value": "0 16px 32px rgba(0, 0, 0, 0.15)",
      "type": "shadow",
      "description": "Ombre très forte - overlays"
    },
    "focus": {
      "value": "0 0 0 3px rgba(255, 108, 47, 0.15)",
      "type": "shadow",
      "description": "Outline focus - accessibilité"
    }
  },

  "animation": {
    "duration": {
      "fast": { "value": "150ms", "type": "duration", "description": "Micro-interactions, hover" },
      "base": { "value": "250ms", "type": "duration", "description": "Transitions standard" },
      "slow": { "value": "350ms", "type": "duration", "description": "Modales, panels" }
    },
    "easing": {
      "easeOut": {
        "value": "cubic-bezier(0, 0, 0.2, 1)",
        "type": "cubicBezier",
        "description": "Sortie - défaut pour la plupart"
      },
      "easeIn": {
        "value": "cubic-bezier(0.4, 0, 1, 1)",
        "type": "cubicBezier",
        "description": "Entrée - éléments disparaissant"
      },
      "easeInOut": {
        "value": "cubic-bezier(0.4, 0, 0.2, 1)",
        "type": "cubicBezier",
        "description": "Bidirectionnel - mouvements complexes"
      }
    }
  },

  "size": {
    "container": {
      "sm": { "value": "640px", "type": "dimension", "description": "Petit conteneur" },
      "md": { "value": "768px", "type": "dimension", "description": "Conteneur moyen" },
      "lg": { "value": "1024px", "type": "dimension", "description": "Grand conteneur" },
      "xl": { "value": "1280px", "type": "dimension", "description": "Conteneur principal - MAX" },
      "2xl": { "value": "1536px", "type": "dimension", "description": "Très grand conteneur" }
    },
    "touchTarget": {
      "min": { "value": "44px", "type": "dimension", "description": "Taille minimale touch mobile (WCAG)" }
    }
  },

  "breakpoint": {
    "sm": { "value": "640px", "type": "dimension", "description": "Mobile large / Tablet portrait" },
    "md": { "value": "768px", "type": "dimension", "description": "Tablet" },
    "lg": { "value": "1024px", "type": "dimension", "description": "Desktop" },
    "xl": { "value": "1280px", "type": "dimension", "description": "Large desktop" },
    "2xl": { "value": "1536px", "type": "dimension", "description": "Extra large" }
  },

  "component": {
    "button": {
      "primary": {
        "backgroundColor": { "value": "{color.primary.500}", "type": "color" },
        "textColor": { "value": "#FFFFFF", "type": "color" },
        "borderRadius": { "value": "{borderRadius.base}", "type": "dimension" },
        "paddingVertical": { "value": "{spacing.3}", "type": "dimension" },
        "paddingHorizontal": { "value": "{spacing.6}", "type": "dimension" },
        "fontSize": { "value": "{typography.fontSize.body}", "type": "dimension" },
        "fontWeight": { "value": "{typography.fontWeight.semibold}", "type": "number" }
      },
      "secondary": {
        "backgroundColor": { "value": "transparent", "type": "color" },
        "borderColor": { "value": "{color.primary.500}", "type": "color" },
        "borderWidth": { "value": "2px", "type": "dimension" },
        "textColor": { "value": "{color.primary.500}", "type": "color" },
        "borderRadius": { "value": "{borderRadius.base}", "type": "dimension" },
        "paddingVertical": { "value": "10px", "type": "dimension", "description": "12px - 2px border" },
        "paddingHorizontal": { "value": "22px", "type": "dimension", "description": "24px - 2px border" }
      }
    },
    "card": {
      "backgroundColor": { "value": "{color.background.page}", "type": "color" },
      "borderColor": { "value": "{color.neutral.100}", "type": "color" },
      "borderWidth": { "value": "1px", "type": "dimension" },
      "borderRadius": { "value": "{borderRadius.md}", "type": "dimension" },
      "padding": { "value": "{spacing.6}", "type": "dimension" },
      "shadow": { "value": "{boxShadow.base}", "type": "shadow" }
    },
    "input": {
      "backgroundColor": { "value": "{color.background.page}", "type": "color" },
      "borderColor": { "value": "{color.neutral.100}", "type": "color" },
      "borderWidth": { "value": "1px", "type": "dimension" },
      "borderRadius": { "value": "{borderRadius.base}", "type": "dimension" },
      "paddingVertical": { "value": "{spacing.3}", "type": "dimension" },
      "paddingHorizontal": { "value": "{spacing.4}", "type": "dimension" },
      "fontSize": { "value": "{typography.fontSize.body}", "type": "dimension" }
    }
  }
}
